{
  "settings" : {
    "analysis" : {
      "analyzer": {
        "html_analyzer":{
          "type":"custom",
          "tokenizer":"standard",
          "filter":["standard", "lowercase", "stop", "snowball"],
          "char_filter" : "html_strip"
        }
      }
    }
  },
  "mappings" : {
    "page" : {
      "properties" : {
        "url": {
          "type": "string",
          "index" : "not_analyzed"
        },
        "body": {
          "type": "string",
		  "analyzer" :  "html_analyzer",
		  "search_analyzer" : "html_analyzer"
        },
        "tags": {
          "type": "string",
          "search_analyzer" : "standard", 
          "index_analyzer" : "standard"
        }
      }
    }
  }
}
